{
    "manifest_version": 3,
    "name": "Trade Watch List",
    "version": "1.0.0",
    "description": "A comprehensive trade watching tool for tracking stocks across different websites with real-time price updates",
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting",
        "alarms",
        "bookmarks",
        "background"
    ],
    "host_permissions": [
        "*://*.tradingview.com/*",
        "*://*.yahoo.finance.com/*",
        "*://*.investing.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.tradingview.com/*",
                "*://*.yahoo.finance.com/*",
                "*://*.investing.com/*"
            ],
            "js": [
                "contentScript.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*",
                "pages/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}